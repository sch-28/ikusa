// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @unique
  username      String
  name          String
  guild         String
  discriminator String
  wars          War[]
  bdo_sync      Boolean      @default(true)
  Suggestion    Suggestion[]
}

model War {
  date       String
  name       String
  won        Boolean
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  guild_name String
  guilds     String
  data       String
  id         String  @id @unique
}

model UploadStorage {
  id   String   @id @unique
  logs String
  time DateTime
}

model MigrateStorage {
  id         String   @id @unique
  request_id String
  logs       String
  guild      String
  name       String
  date       String
  time       DateTime
}

model Player {
  id          String             @id @unique
  family_name String
  guild       String?
  region      String
  characters  PlayerCharacters[]
}

model PlayerCharacters {
  class     String
  level     Int?
  name      String
  main      Boolean?
  player    Player   @relation(fields: [player_id], references: [id], onDelete: Cascade)
  player_id String
  id        String   @id @unique @default(uuid())
}

model Suggestion {
  id      String   @id @unique
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  message String
  title   String
  time    DateTime
  likes   Int      @default(0)
}
